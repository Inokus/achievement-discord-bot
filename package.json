{
  "name": "achievement-discord-bot",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "start": "tsx src",
    "dev": "tsx watch src",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "migrate:latest": "tsx src/database/migrate",
    "gen:migration": "tsx src/database/generateMigration",
    "gen:types": "kysely-codegen --camel-case --dialect sqlite --out-file src/database/types.ts && prettier --write src/database/types.ts",
    "test": "vitest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node18": "^18.2.2",
    "@types/better-sqlite3": "^7.6.5",
    "@types/express": "^4.17.18",
    "@types/node": "^20.8.2",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "kysely": "^0.27.3",
    "kysely-codegen": "^0.14.2",
    "prettier": "^3.0.3",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "better-sqlite3": "^8.7.0",
    "discord.js": "^14.15.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "http-status-codes": "^2.3.0",
    "zod": "^3.22.4"
  }
}
